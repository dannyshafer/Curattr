<div class="container">
  <div class="well">
    <h2>Edit User</h2>

    <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"><%= msg %></div>
    <% end %>
    <% end %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class:'form-control' %><br>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.text_field :password, class:'form-control' %><br>
    </div>

    <%= f.submit "Submit", class: 'btn btn-primary' %>
    <%= link_to "Cancel", users_path, class: "btn btn-default" %>

    <% end %>
  </div>
</div>